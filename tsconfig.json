{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"strict": true,
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom", "dom.iterable"],
		"types": ["vue"],
		"skipLibCheck": true,
		"outDir": "dist",
		"declaration": true
	},
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue"]
}
